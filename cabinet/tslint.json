{
  "extends": "tslint:recommended",
  "rules": {
    "indent": [
      true,
      "tabs"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-preblock",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "no-console": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  }
}
